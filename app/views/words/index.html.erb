<% provide :title, t(".all_words") %>
<h1><%= t ".all_words" %></h1>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <%= form_tag words_path, method: :get do %>
      <div class="row">
        <div class="col-md-7">
          <%= text_field_tag :search, params[:search], class: "form-control" %>
        </div>
        <div class="col-md-2">
          <%= select_tag :status, options_for_select(
            Settings.options.map{|option| [option.humanize, option]},
            params[:status]), class: "form-control" %>
        </div>
        <div class="col-md-2">
          <%= select_tag :category_id, options_for_select(@categories.
            collect{|cate| [cate.name, cate.id]}, params[:category_id]),
            include_blank: true, class: "form-control" %>
        </div>
        <div class="col-md-1">
          <%= button_tag t(".search"), class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-md-10 col-md-offset-1">
    <table class="table table-hover">
      <thead>
        <tr>
          <th><%= t ".index" %></th>
          <th><%= t ".category" %></th>
          <th><%= t ".word_content" %></th>
        </tr>
      </thead>
      <tbody>
        <%= render @words %>
      </tbody>
    </table>
    <%= will_paginate @words %>
  </div>
</div>
