<div class="header">
  <div class="container">
    <div class="header-nav">
      <nav class="navbar navbar-default">
        <div class="navbar-header">
          <h1><a class="navbar-brand" href="http://localhost:3000/">
            <i class="glyphicon glyphicon-education" aria-hidden="true"></i>
            <span><%= t ("logo1") %></span><%= t ("logo2") %></a>
          </h1>
        </div>
        <div class="collapse navbar-collapse nav-wil">
          <ul class="nav navbar-nav">
            <li class="<%= current_page root_path %>">
              <%= link_to (t "home"), root_path,
                class: "hvr-overline-from-center button2" %>
            </li>
            <li>
              <%= link_to (t "about"), "/about",
                class: "hvr-overline-from-center button2" %>
            </li>
            <% if logged_in? %>
              <li class="<%= current_page users_path %>">
                <%= link_to (t "user"), users_path,
                class: "hvr-overline-from-center button2" %></li>
              <li class="<%= current_page words_path %>">
                <%= link_to (t "word"), words_path,
                  class: "hvr-overline-from-center button2" %></li>
              <li class="<%= current_page categories_path %>">
                <%= link_to (t "Categories"), categories_path,
                  class: "hvr-overline-from-center button2" %></li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <%= current_user.user_name %><b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to (t "profile"), current_user %></li>
                  <li><%= link_to (t "settings"), edit_user_path(current_user) %></li>
                  <li class="divider"></li>
                  <li>
                    <%= link_to (t "logout"), logout_path, method: "delete" %>
                  </li>
                </ul>
              </li>
            <% else %>
              <li>
                <%= link_to (t "login"), login_path,
                class: "hvr-overline-from-center button2" %>
              </li>
            <% end %>
          </ul>
        </div>
      </nav>
    </div>
  </div>
</div>
