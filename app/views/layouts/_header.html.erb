<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to image_tag("http://framgia.co.jp/images/logo_f.png") +
      t("logo_text"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to (t "home"), root_path %></li>
        <li><%= link_to (t "about"), "/about" %></li>
        <% if logged_in? %>
          <li><%= link_to (t "user"), users_path %></li>
          <li><%= link_to (t "word"), new_admin_word_path %></li>
          <li><%= link_to (t "Categories"),
            current_user.is_admin? ? admin_categories_path : categories_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.user_name %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to (t "profile"), current_user %></li>
              <li><%= link_to (t "settings"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to (t "logout"), logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to (t "login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
