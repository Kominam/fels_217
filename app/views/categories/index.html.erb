<% provide :title, t(".all_categories") %>
<h1><%= t ".all_categories" %></h1>

<div class="row">
  <div class="col-md-9 col-md-offset-2">
    <%= form_tag categories_path, method: :get do %>
      <div class="col-md-9 form-group">
        <%= text_field_tag :search, params[:search], class: "form-control" %>
      </div>
      <div class="col-md-1 form-group">
        <%= button_tag class: "btn btn-primary fe-search" do %>
          <i class="fa fa-search"></i>
          <%= t ".search" %>
        <% end %>
      </div>
   <% end %>
  </div>
  <div class="col-md-10 col-md-offset-1">
    <div>
      <span class="pull-right" style="line-height: 50px;">
        <%= t(".total_cate") + @categories.size.to_s %>
      </span>
    </div>
    <table class="table round-table round-table-rounded">
      <thead>
        <tr>
          <th><%= t ".index" %></th>
          <th><%= t ".category_name" %></th>
          <th><%= t ".words" %></th>
          <th><%= t ".start" %></th>
        </tr>
      </thead>
      <tbody>
        <%= render @categories %>
      </tbody>
    </table>
    <%= will_paginate @categories %>
  </div>
</div>
