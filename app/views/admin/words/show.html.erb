<% provide :title, t(".detail_words") %>
<h1><%= t ".detail_words" %></h1>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <div>
      <span>
        <%= link_to t(".add_word"), new_admin_word_path, class: "btn btn-success" %>
      </span>
    </div>
    <table class="table table-hover">
      <thead>
        <tr>
          <th><%= t ".category" %></th>
          <th><%= t ".content" %></th>
          <th><%= t ".answer" %></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= @word.category_name %></td>
          <td><%= @word.content %></td>
          <td>
            <% @answers.each do |answer| %>
              <div class="row">
                <div class="col-md-3"><%= answer.content %></div>
                <% if answer.is_correct %>
                  <div class="col-md-3 label label-primary"><%= t ".correct" %></div>
                <% else %>
                  <div class="col-md-3 label label-danger"><%= t ".wrong" %></div>
                <% end %>
                </div>
              </div>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
