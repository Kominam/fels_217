<% provide :title, t(".all_words") %>
<h1><%= t ".all_words" %></h1>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_tag admin_words_path, method: :get do %>
      <div class="row">
        <div class="col-md-8">
          <%= text_field_tag :search, params[:search], class: "form-control" %>
        </div>
        <div class="col-md-3">
          <%= select_tag :category_id, options_for_select(@categories.
            collect{|cate| [cate.name, cate.id]}, params[:category_id]),
            include_blank: true, class: "form-control" %>
        </div>
        <div class="col-md-1">
          <%= button_tag t(".search"), class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-md-10 col-md-offset-1">
    <div>
      <span>
        <%= link_to t(".add_word"), new_admin_word_path, class: "btn btn-success" %>
      </span>
    </div>
    <table class="table table-hover">
      <thead>
        <tr>
          <th><%= t ".index" %></th>
          <th><%= t ".category" %></th>
          <th><%= t ".word_content" %></th>
          <th colspan="3"><%= t ".action" %></th>
        </tr>
      </thead>
      <tbody>
        <%= render @words %>
      </tbody>
    </table>
    <%= will_paginate @words %>
  </div>
</div>
