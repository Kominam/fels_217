<% provide :title, t(".all_words") %>
<h1><%= t ".all_words" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag words_path, class: "form-inline", method: :get do %>
      <%= text_field_tag :search, params[:search], size: 50, class: "form-control" %>
      <%= button_tag t(".search"), class: "btn btn-primary" %>
    <% end %>
  </div>
  <div class="col-md-10 col-md-offset-1">
    <div>
      <span>
        <%= link_to t(".add_word"), new_admin_word_path, class: "btn btn-success" %>
      </span>
    </div>
    <table class="table table-hover">
      <thead>
        <tr>
          <th><%= t ".index" %></th>
          <th><%= t ".category" %></th>
          <th><%= t ".word_content" %></th>
          <th colspan="3"><%= t ".action" %></th>
        </tr>
      </thead>
      <tbody>
        <%= render @words %>
      </tbody>
    </table>
    <%= will_paginate @words %>
  </div>
</div>
