<tr>
  <td>
    <%= index_for lesson_counter, @lessons.current_page, Settings.per_page %>
  </td>
  <td><%= lesson.id %></td>
  <td><%= lesson.category_name %></td>
  <td>
    <%= lesson.number_correct_answer.to_s + " / " + lesson.results.size.to_s %>
  </td>
  <% if lesson.is_complete %>
    <td>
      <%= link_to t(".done"), lesson_path(lesson), class: "btn btn-success" %>
    </td>
  <% else %>
    <td>
      <%= link_to t(".doing"), edit_lesson_path(lesson), class: "btn btn-info" %>
    </td>
  <% end %>
</tr>
