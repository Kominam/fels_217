<% provide :title, t(".edit user") %>
<div class="behind row">
  <h1><%= t (".update your profile") %></h1>
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user do |f| %>
      <%= render "shared/error_messages", object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :user_name, class: "form-control" %>

      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>

      <% unless current_user.is_admin %>
        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control" %>

        <%= f.label :password_confirmation, t(".confirmation") %>
        <%= f.password_field :password_confirmation, class: "form-control" %>
      <% else %>
        <%= f.label :admin %>
        <%= f.check_box :is_admin, class: "form-control" %>
      <% end %>

      <%= f.submit t(".save changes"), class: "btn btn-primary" %>
    <% end %>

    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="http://gravatar.com/emails" target="_blank"><%= t (".change") %></a>
    </div>
  </div>
</div>
